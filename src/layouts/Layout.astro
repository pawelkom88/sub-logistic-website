---
import "@fontsource/ibm-plex-sans/300.css";
import "@fontsource/ibm-plex-sans/700.css";
import Footer from "../components/footer/Footer.astro";
import Nav from "../components/nav/Nav.astro";
import Seo from "../seo/Seo.astro";
import { getCountryCode, SelectedTranslation } from "../utils/utils";
import { getImage } from "astro:assets";
import logoPng from "../assets/images/sub-logistic-logo.png";

interface Props {
  contactBtn?: SelectedTranslation["contactBtn"] | undefined;
  contact?: SelectedTranslation["contact"] | undefined;
  footer?: SelectedTranslation["footer"] | undefined;
  links?: SelectedTranslation["nav"]["links"] | undefined;
  title: string;
  description: string;
  image?: {
    src: string;
    alt: string;
  };
}

const currentLang = getCountryCode(Astro.url.pathname);
const { contactBtn, links, contact, footer, title, description, image } =
  Astro.props;

// Generate Apple Touch Icon at build time (180x180 PNG)
const appleIcon = await getImage({
  src: logoPng,
  width: 180,
  height: 180,
  format: "png",
});
---

<!doctype html>
<html lang={currentLang}>
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="apple-touch-icon" sizes="180x180" href={appleIcon.src} />
    <link rel="preconnect" href="https://web3forms.com" crossorigin />
    <meta name="generator" content={Astro.generator} />
    <Seo {title} {description} url={Astro.url} {image} jsonLDType="website" />
    <title>{title}</title>
  </head>
  <body>
    <Nav contactBtn={contactBtn} contact={contact} links={links} />
    <slot />
    <Footer contact={contact} footer={footer} links={links} />
    <style is:global>
      :root {
        --primary: #004990;
        --hover: #0090d6;
        --secondary: #cf1f44;
        --headerColor: #1a1a1a;
        --bodyTextColor: #1a1a1a;
        --bodyTextColorWhite: #fafbfc;
        --white: #fff;
        --navHeight: 4.5rem;
        /* 13px - 16px */
        --topperFontSize: clamp(0.8125rem, 1.6vw, 1rem);
        /* 31px - 49px */
        --headerFontSize: clamp(1.9375rem, 3.9vw, 3.0625rem);
        --bodyFontSize: 1rem;
        /* 60px - 100px top and bottom */
        --sectionPadding: clamp(3.75rem, 7.82vw, 6.25rem) 1rem;
      }

      body {
        margin: 0;
        padding: 0;
        font-family: "IBM Plex Sans", sans-serif;
      }

      *,
      *:before,
      *:after {
        /* prevents padding from affecting height and width */
        box-sizing: border-box;
      }
      .cs-topper {
        font-size: var(--topperFontSize);
        line-height: 1.2em;
        text-transform: uppercase;
        text-align: inherit;
        letter-spacing: 0.1em;
        font-weight: 700;
        color: var(--primary);
        margin-bottom: 0.25rem;
        display: block;
      }

      .cs-title {
        font-size: var(--headerFontSize);
        font-weight: 300;
        line-height: 1.2em;
        text-align: inherit;
        max-width: 43.75rem;
        margin: 0 0 1rem 0;
        color: var(--headerColor);
        position: relative;
      }

      .cs-text {
        font-size: var(--bodyFontSize);
        font-weight: 300;
        line-height: 1.5em;
        text-align: inherit;
        width: 100%;
        max-width: 40.625rem;
        margin: 0;
        color: var(--bodyTextColor);
      }
    </style>
  </body>
</html>
