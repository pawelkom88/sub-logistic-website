---
import "./cta.css";
import { SelectedTranslation } from "../../utils/utils";

interface Props {
  cta: SelectedTranslation["cta"];
}

const { cta } = Astro.props;
---

<section id="cta-51">
  <div class="cs-container">
    <div class="cs-content">
      <span class="cs-topper">{cta.topper}</span>
      <h2 class="cs-title">{cta.heading}</h2>
      <p class="cs-text">
        {cta.description}
      </p>
      <a href="#cs-contact-490" class="cs-button-solid">{cta.actionBtn}</a>
    </div>
  </div>
  <!-- Background Image-->
  <picture class="cs-picture">
    <source
      media="(max-width: 600px)"
      srcset="https://images.pexels.com/photos/167733/pexels-photo-167733.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
    />
    <source
      media="(min-width: 601px)"
      srcset="https://images.pexels.com/photos/167733/pexels-photo-167733.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
    />
    <img
      loading="lazy"
      decoding="async"
      src="https://images.pexels.com/photos/167733/pexels-photo-167733.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=2"
      alt="cabinets"
      width="1920"
      height="1280"
      aria-hidden="true"
    />
  </picture>
</section>
