---
import { Image, Picture } from "astro:assets";
import icon2 from "../../assets/icons/plane.svg";
import icon1 from "../../assets/icons/ship-icon.svg";
import icon3 from "../../assets/icons/truck.svg";
import whyUsImage from "../../assets/images/dron-view-warehouse.jpg";
import whyUsImage3 from "../../assets/images/loads-of-containers-at-port.jpg";
import whyUsImage2 from "../../assets/images/lorries-parked-in-warehouse-yard.jpg";
import type { SelectedTranslation } from "../../utils/utils";
import "./whyus.css";

interface Props {
  whyUs: SelectedTranslation["whyUs"];
}

const { whyUs } = Astro.props;

const icons = whyUs.icons.map((icon, index) => ({
  title: icon.title,
  image: [icon2, icon1, icon3][index],
}));
---

<section id="sbsr-516">
  <div class="cs-container">
    <div class="cs-content">
      <span class="cs-topper">{whyUs?.topper}</span>
      <h2 class="cs-title">{whyUs?.heading}</h2>
      {
        whyUs?.description.map((p, index) => (
          <p class="cs-text">{p.paragraph}</p>
        ))
      }
      <ul class="cs-ul">
        {
          icons.map((icon) => (
            <li class="cs-li">
              <Image
                class="cm-icon"
                src={icon.image}
                alt="icon"
                width="40"
                height="40"
                loading="lazy"
              />
              {icon.title}
            </li>
          ))
        }
      </ul>
      <a href="/oferta" class="cs-button-solid">{whyUs?.actionBtn}</a>
    </div>
    <div class="cs-image-group">
      <ul class="cs-stat-group">
        {
          whyUs?.stats.map((stat) => (
            <li class="cs-stat">
              <span class="cs-number">{stat.number}</span>
              <span class="cs-desc">{stat.title}</span>
            </li>
          ))
        }
      </ul>
      <div class="grid">
        <div class="cs-picture-1">
          <Picture
            width="630"
            height="461"
            src={whyUsImage}
            class="cs-picture"
            alt="Dron view warehouse"
            formats={["avif", "webp"]}
            loading="lazy"
          />
        </div>
        <div class="cs-picture-2">
          <Picture
            width="630"
            height="461"
            src={whyUsImage2}
            class="cs-picture"
            alt="Dron view warehouse"
            formats={["avif", "webp"]}
            loading="lazy"
          />
        </div>
        <div class="cs-picture-3">
          <Picture
            width="630"
            height="461"
            src={whyUsImage3}
            class="cs-picture"
            alt="Dron view warehouse"
            formats={["avif", "webp"]}
            loading="lazy"
          />
        </div>
      </div>
    </div>
  </div>
</section>
