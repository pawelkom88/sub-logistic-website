---
import "../../styles/onas.css";
import { getCountryCode, getHref } from "../../utils/utils";
import { Picture } from "astro:assets";
import aboutImage from "../../assets/images/lorries-parked-in-warehouse-yard.jpg";

interface Props {
  aboutUs: any;
}

const { aboutUs } = Astro.props;
const currentLang = getCountryCode(Astro.url.pathname);
const aboutAltMap = {
  en: "Lorries parked in a warehouse yard",
  de: "Lastwagen, die in einem Lagerhof parken",
  pl: "Ciężarówki zaparkowane na placu magazynowym",
} as const;
---

<section id="content-page-713">
  <div class="cs-container">
    <div class="cs-content">
      <h1 class="cs-title">
        {aboutUs.h1part1}
        <span class="cs-color">{aboutUs.h1part2}</span>.
      </h1>
      <h2>{aboutUs.h2}</h2>
      <p class="cs-text">{aboutUs.h2Paragraph}</p>
      <h3>{aboutUs.h3}</h3>
      <p class="cs-text">{aboutUs.h3Paragraph}</p>
      <h3>{aboutUs.h3next}</h3>
      <ul>
        {
          aboutUs.li.map((item: any) => (
            <li>
              {item.title}
              <p class="cs-text">{item.description}</p>
            </li>
          ))
        }
      </ul>
      <h4>{aboutUs.h4}</h4>
      <p class="cs-text">{aboutUs.h4Paragraph}</p>
      <br />
      <p class="cs-text">
        <!--lang here ?-->
        <a href={getHref(currentLang, aboutUs.link.url)}>{aboutUs.link.part1}</a
        >, {aboutUs.link.part2}
      </p>
    </div>
    <div class="cs-image-group">
      <Picture
        src={aboutImage}
        class="cs-picture"
        alt={aboutAltMap[currentLang]}
        formats={["avif", "webp"]}
        loading="lazy"
        decoding="async"
        fetchpriority="low"
        sizes="(max-width: 600px) 100vw, 570px"
      />
    </div>
  </div>
  <picture class="cs-background">
    <img
      src="https://csimg.nyc3.cdn.digitaloceanspaces.com/Images%2FGraphics%2Flarge-waves.svg"
      alt="waves"
      loading="lazy"
      decoding="async"
      aria-hidden="true"
      width="625"
      height="952"
    />
  </picture>
</section>
