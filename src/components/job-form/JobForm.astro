<form
  class="cs-form"
  id="contact-569"
  name="Job Form"
  action="https://api.web3forms.com/submit"
  method="POST"
>
  <input
    aria-hidden="true"
    type="hidden"
    name="access_key"
    value="YOUR_ACCESS_KEY_HERE"
  />
  <input
    aria-hidden="true"
    type="hidden"
    name="subject"
    value={jobForm.subject}
  />
  <input
    aria-hidden="true"
    type="checkbox"
    name="botcheck"
    style="display: none;"
  />
  <!-- <div class="h-captcha" data-captcha="true"></div> -->
  <div>
    <label for="name-569" class="cs-label">{jobForm.fields.name.label}</label>
    <input
      autocomplete="name"
      class="cs-input"
      required
      type="text"
      id="name-569"
      name="name"
      placeholder={jobForm.fields.name.placeholder}
      required
    />
  </div>
  <div>
    <label for="phone-569" class="cs-label">{jobForm.fields.phone.label}</label>
    <input
      autocomplete="tel"
      class="cs-input"
      type="tel"
      id="phone-569"
      name="phone"
      placeholder={jobForm.fields.phone.placeholder}
      required
    />
  </div>

  <div>
    <label for="email-569" class="cs-label">{jobForm.fields.email.label}</label>
    <input
      autocomplete="email"
      class="cs-input"
      type="email"
      id="email-569"
      name="email"
      placeholder={jobForm.fields.email.placeholder}
      required
    />
  </div>

  <div>
    <label for="waga-towaru" class="cs-label">{jobForm.fields.weight.label}</label>
    <input
      class="cs-input"
      required
      type="number"
      id="waga-towaru"
      name="Waga towarów do przewiezienia"
      placeholder={jobForm.fields.weight.placeholder}
      required
    />
  </div>

  <div>
    <label for="date-load" class="cs-label">{jobForm.fields.loadingDate}</label>
    <input
      class="cs-input"
      type="date"
      id="date-load"
      name="Data załadunku"
      required
    />
  </div>

  <div>
    <label for="date-unload" class="cs-label">{jobForm.fields.unloadingDate}</label>
    <input
      class="cs-input"
      type="date"
      id="date-unload"
      name="Data rozładunku"
      required
    />
  </div>

  <div>
    <label for="date-569" class="cs-label">{jobForm.fields.loadingAddress.label}</label>
    <input
      class="cs-input"
      type="text"
      id="date-569"
      name="Adres załadunku"
      placeholder={jobForm.fields.loadingAddress.placeholder}
      required
    />
  </div>

  <div>
    <label for="hear-569" class="cs-label">{jobForm.fields.unloadingAddress.label}</label>
    <input
      class="cs-input"
      type="text"
      id="hear-569"
      name="Adres rozładunku"
      placeholder={jobForm.fields.unloadingAddress.placeholder}
      required
    />
  </div>

  <div class="cs-textarea-column">
    <label for="message-569" class="cs-label cs-message">{jobForm.fields.goodsDescription}</label>
    <textarea
      class="cs-input cs-textarea"
      required
      name="Opis towarów"
      id="message-569"
      placeholder="Describe your goods"></textarea>
  </div>
  <button class="submit-btn">{jobForm.submitBtn}</button>
</form>
