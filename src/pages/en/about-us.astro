---
import Layout from "../../layouts/Layout.astro";
import "../../styles/onas.css";
import { getCollection } from "astro:content";
import {
  getCountryCode,
  getCurrentLanguageTranslation,
} from "../../utils/utils";
import About from "../../components/about-us/About.astro";

const aboutUsCollection = await getCollection("aboutUs");
const aboutUs = await getCurrentLanguageTranslation(
  getCountryCode(Astro.url.pathname),
  aboutUsCollection,
);
const translations = await getCurrentLanguageTranslation(
  getCountryCode(Astro.url.pathname),
);
---

<Layout
  contactBtn={translations.contactBtn}
  contact={translations.contact}
  links={translations.nav.links}
  footer={translations.footer}
  description="Über Sub Trans – Leidenschaftliche Logistik, geführt von Expertise"
  title="Erfahren Sie die Geschichte von Sub Trans, gegründet von Piotr Subotowicz. Entdecken Sie unser Engagement für personalisierte Logistik, innovative Praktiken und eine Reise, die von Leidenschaft und Hingabe geprägt ist."
>
  <About aboutUs={aboutUs} />
</Layout>
