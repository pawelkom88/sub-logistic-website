---
import Layout from "../../layouts/Layout.astro";
import "../../styles/onas.css";
import {
  getCountryCode,
  getCurrentLanguageTranslation,
} from "../../utils/utils";
import About from "../../components/about-us/About.astro";

const translations = await getCurrentLanguageTranslation(
  getCountryCode(Astro.url.pathname),
);
---

<Layout
  contactBtn={translations.contactBtn}
  contact={translations.contact}
  links={translations.nav.links}
  footer={translations.footer}
  title="Über Sub Trans – Logistik mit Leidenschaft und Erfahrung"
  description="Erfahren Sie die Geschichte von Sub Trans, gegründet von Piotr Subotowicz. Entdecken Sie unser Engagement für personalisierte Logistik, moderne Arbeitsweisen und eine Reise, die von Hingabe und Expertise geprägt ist."
>
  <About aboutUs={translations.aboutUs} />
</Layout>
