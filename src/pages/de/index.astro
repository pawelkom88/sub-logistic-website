---
import ContactForm from "../../components/contact-form/ContactForm.astro";
import Cta from "../../components/cta/Cta.astro";
import Hero from "../../components/hero/Hero.astro";
import Reviews from "../../components/reviews/Reviews.astro";
import Service from "../../components/service/Service.astro";
import Team from "../../components/team/Team.astro";
import WhyUs from "../../components/why-us/WhyUs.astro";
import Layout from "../../layouts/Layout.astro";
import {
  getCountryCode,
  getCurrentLanguageTranslation,
} from "../../utils/utils";

const translations = await getCurrentLanguageTranslation(
  getCountryCode(Astro.url.pathname),
);
---

<Layout
  contactBtn={translations.contactBtn}
  contact={translations.contact}
  links={translations.nav.links}
  footer={translations.footer}
  title="Sub Logistic - Ihr Partner für Effizienten Transport"
  description="Entdecken Sie effiziente Transport- und Logistiklösungen, die auf Ihre Bedürfnisse zugeschnitten sind. Kontaktieren Sie uns für weitere Informationen."
>
  <Hero hero={translations.hero} />
  <br />
  <Service service={translations.services} />
  <br />
  <WhyUs whyUs={translations.whyUs} />
  <br />
  <!-- <Faq /> -->
  <Reviews reviews={translations.reviews} />
  <Team link={translations.nav.links[1]} team={translations.team} />
  <br />
  <Cta cta={translations.cta} />
  <br />
  <ContactForm form={translations.contactForm} contact={translations.contact} />
  <br />
</Layout>
