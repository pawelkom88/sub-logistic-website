---
import jsonLDGenerator from "./jsonLd";
import { siteDataByLang } from "./siteData";
import socialCard from "@assets/images/social-media-card.webp";

const { title, description, url = Astro.url, image, jsonLDType, currentLang = 'en' } = Astro.props;

const t = siteDataByLang[currentLang] || siteDataByLang.en;

const site = (Astro.site?.toString() || t.url || "").trim();
const defaultOg = site ? new URL(socialCard.src, site).href : socialCard.src;

const jsonLD = jsonLDGenerator({
  type: "website",
  post: jsonLDType,
  url,
  image: defaultOg,
  lang: currentLang,
});
---

<!-- SEO -->
<link rel="canonical" href={url} />

<!-- Open Graph -->
<meta property="og:site_name" content="Sub Logistics" />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:url" content={url} />
<meta property="og:image" content={image?.src || defaultOg} />
<meta property="og:image:url" content={image?.src || defaultOg} />
<meta
  property="og:image:secure_url"
  content={image?.src || defaultOg}
/>
<meta property="og:image:type" content="image/webp" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:alt" content={image?.alt || t.image.alt} />

<!-- Twitter -->
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:image" content={image?.src || defaultOg} />
<meta name="twitter:image:alt" content={image?.alt || t.image.alt} />
<meta name="twitter:domain" content={new URL(url).host} />

<!-- JSON LD -->
<Fragment set:html={jsonLD} />
